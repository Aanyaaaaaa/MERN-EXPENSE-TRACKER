    "type": "git",
    "url": "https://github.com/Arjavv/mern-expense-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/Arjavv/mern-expense-tracker/issues"
  },
  "homepage": "https://github.com/Arjavv/mern-expense-tracker#readme",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
