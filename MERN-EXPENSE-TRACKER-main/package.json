{
  "name": "mern-expense-tracker",
  "version": "1.0.0",
  "description": "A full-stack expense tracking application built with MERN stack with Indian Rupee (â‚¹) currency support",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "server": "nodemon backend/server.js",
    "client": "powershell -Command \"$env:PORT='3001'; npm start --prefix frontend\"",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "install-client": "cd frontend && npm install",
    "install-server": "npm install",
    "install-all": "npm run install-server && npm run install-client",
    "build": "cd frontend && npm run build"
  },
  "keywords": [
    "mern",
    "expense-tracker",
    "react",
    "node",
    "mongodb",
    "express",
    "javascript",
    "fullstack",
    "indian-currency",
    "rupee"
  ],
